{
   "name": "Slack hacked",
   "namespace": "slack",
   "url": "http://localhost:8901/manifest.json",
   "logo_url": "logo.png",
   "description": {
      "short": "Send notifications to a Slack channel based on events you set up in Rule Builder.",
      "long": "Send notifications of events in Rule Builder to a Slack channel so team members get updates when a rule is triggered.\n\nSelect the slack channel to send the notification to on Rule Builder page.\n\nIn Slack, you will receive a Slack message describing the event, with a link to the related scorecard to view details."
   },
   "tags": [
      "productivity",
      "slack",
      "notifications",
      "automation",
      "slack.com"
   ],
   "developer": {
      "name": "SecurityScorecard",
      "website_url": "https://securityscorecard.com",
      "privacy_url": "https://securityscorecard.com/privacy"
   },
   "actions": [
      {
         "id": "notify_channel",
         "name": "Notify Channel",
         "url": "actions/notify_channel",
         "settings_url": "actions/notify_channel/settings"
      }
   ],
   "display_settings": {
      "primary_color": "#ecb22e",
      "logo_url": "logo.png",
      "hero_images": [
         {
            "url": "https://ui-metadata.securityscorecard.io/apps-imagery/slack-hero.gif"
         }
      ],
      "homepage_url": "https://slack.com",
      "help_url": "https://support.securityscorecard.com/hc/en-us/articles/360057500772-Slack-App"
   },
   "install": {
      "url": "https://platform-api.securityscorecard.tech/apps/slack/install",
      "secrets": [
         {
            "key": "ACCESS_TOKEN",
            "description": "a slack access token",
            "value_required": true
         },
         {
            "key": "SSC_ACCESS_TOKEN",
            "description": "Access token, result of OAuth flow against Security Scorecard site",
            "value_required": true
         }
      ],
      "oauth": {
         "redirect_uri": "https://platform-api.securityscorecard.tech/apps/slack/redirect-from-ssc",
         "scopes": [
            "issue:summary",
            "user:read",
            "users:list",
            "invite:create",
            "portfolio:read",
            "portfolio:edit",
            "score:summary",
            "issue:summary",
            "issue:details",
            "issue:refute",
            "history:score",
            "report:create",
            "report:read",
            "rule:edit"
         ]
      }
   }
}